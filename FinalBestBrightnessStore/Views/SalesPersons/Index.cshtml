@model IEnumerable<FinalBestBrightnessStore.Models.SalesPerson>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    body {
        background-color: #6b9080;
    }
    table {
        background-color: white;
    }
</style>

<body> 
<h1>Manage Salesperson</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateOfbirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfbirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.salePersonId">Edit</a>
                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.salePersonId">Details</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.salePersonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>