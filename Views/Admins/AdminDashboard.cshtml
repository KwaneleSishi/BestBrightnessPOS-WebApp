@{
}

@model FinalBestBrightnessStore.Models.AdminDashboard

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style> 
    body{
        background-color: #6b9080;

    }

    h2{
        color: #000;
        text-align: left;
        font-family:Times New Roman;
    }


</style>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-8"><h2>Admin Dashboard</h2></div><br />
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <div class="row">
                    <div class="col-md-3 rounded shadow bg-primary text-white">
                        <div class="row">
                            <div class="col-md-10">
                                <h3>Products</h3>
                                <h1>@Model.ProductCount</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-3 rounded shadow bg-primary text-white">
                        <div class="row">
                            <div class="col-md-10">
                                <h3>Finance</h3>
                                <h1>@Model.TotalIncome</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-3 rounded shadow bg-primary text-white">
                        <div class="row">
                            <div class="col-md-10">
                                <h3>Sales persons</h3>
                                <h1>@Model.SalesPersonCount</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>

        <div class="row mb-5 mt-5"></div>

        <div class="row">
            <div class="col-1 bg-gradient"></div>
            <div class="col-10">
                <div class="row">
                    <div class="col-md-3 bg-info rounded shadow">
                        <div class="row">
                            <div class="col-md-10">
                                <h3>Stock managers</h3>
                                <h1>@Model.StockManangerCount</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</body>